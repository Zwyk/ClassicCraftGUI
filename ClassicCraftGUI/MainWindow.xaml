                                                    <ComboBoxItem>Undead</ComboBoxItem>
                                                </ComboBox>
                                            </Grid>
                                            <Border  Margin="0 10 0 0" Padding="2" BorderBrush="#D2D2D2" BorderThickness="1" Background="#EFEFEF" CornerRadius="2">
